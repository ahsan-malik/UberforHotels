<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:elevation="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:src="@drawable/hotelimg"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/room_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:paddingLeft="@dimen/_10sdp"
        android:text="Supreme Suites"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/room_id"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp">

        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/ic_baseline_wifi_12"
            android:tint="@color/design_default_color_primary_variant"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:text="Internet Available"
            android:textSize="@dimen/_8sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bookBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/img"
        android:layout_toRightOf="@+id/img"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:paddingRight="@dimen/_40sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:background="@drawable/card"
        android:backgroundTint="@color/colorPrimary"
        android:backgroundTintMode="multiply">

        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/ic_baseline_near_me"
            android:tint="@color/whitecolor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Reserve me"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold"
            android:textColor="@color/whitecolor"/>

    </LinearLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/internet"
        android:layout_toRightOf="@+id/img"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Rs 4900"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/bed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:background="@color/semi_transparent_white"
        android:text="Three Beds"
        android:textSize="@dimen/_6sdp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:background="@color/red"
        android:text="Reserved"
        android:textSize="@dimen/_6sdp"
        android:textColor="@color/whitecolor"
        android:textStyle="bold"
        />

</RelativeLayout>